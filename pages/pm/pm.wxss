.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.flex-test{
  position: absolute;
  top: 40px;
  margin: 10px 20px 0;
  width:300px;
  height: 220px;
  /* box-shadow: 10px 10px 30px 5px skyblue; */
  border-radius: 10px 10px 0 0;
  overflow: hidden;
}
.flex-test view.th{
  font-size: 40rpx;
  color: white;
  background-color: rgb(255, 0, 0);
  height: 30px;
  line-height: 30px;
  text-align: center;
  position: relative;
  top: 0px;
}
.flex-test view.bd{
  height: 30px;
  background-color: #e0e0e0;
  border-bottom: 1px solid gray;
  line-height: 30px;
  font-size: 30rpx;
  padding-left: 15px;
}

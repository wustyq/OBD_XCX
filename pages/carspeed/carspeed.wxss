.page{
  height: 100vh;
}
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 4;
  /* right: 0; */

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.content {
  height: 100vh;
  overflow: hidden;
}
.content .box {
  height: 100vh; 
  position: relative;
 }
 .box2 .in{
   display: flex;
   border: 1px solid gray;
   position: absolute;
   top: 30px;
   left: 8vw;
   width: 74vw;
 }
 .box2 .in input{
   flex: 1;
   padding-left: 5px;
   font-size: 16px;
 }
 .box2 .in_scroll{
   white-space: nowrap;
   display: flex;
   border: 1px solid gray;
   position: absolute;
   top: 70px;
   left: 8vw;
   width: 74vw;
   height: 300px;
 }
 .in_scroll text {
  display: inline-block;
  text-align:center;line-height: 25px;
  border-bottom: 1px solid #000000;
 }
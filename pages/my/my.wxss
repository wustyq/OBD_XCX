/* pages/my/my.wxss */
.page{
  height: 100%;
}
.content {
  height: 100%;
}
.page-body {
  display: flex;
  flex-direction: column;
  background-color: rgb(13, 155, 222);
  height: 100vh;
}
.box3 {
  height: 150px;
  width: 100vw;
  text-align: center;
}
.box3 text {
  color: #ffffff;
  display: inline-block;
  width: 130px;
  font-size: 18px;
  text-overflow:ellipsis;
  word-wrap:break-word;
  margin-top: 20px;
}
.box4 {
  flex: 1;
  border-radius: 30px 30px 0 0;
  background-color: #ffffff;
  padding-bottom: 55px;
  position: relative;
}
.box4 .txt {
  position: absolute;
  width: 100%;
  top: 30px;
}
.box4-txt {
  display: flex;
  border-bottom: 2px solid #e0e0e0;
  margin-top: 20px;
}
.box4 .txt text {
  flex: 1;
  display: inline-block;
  height: 30px;
  font-size: 18px;
  line-height: 30px;
}